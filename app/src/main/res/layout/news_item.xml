<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_150dp">

    <androidx.cardview.widget.CardView android:background="@color/black"
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:elevation="@dimen/_4dp"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:paddingBottom="@dimen/_8dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="@dimen/_2dp"
        app:cardElevation="@dimen/_4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/_16dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imvEventBullet"
                android:layout_alignParentStart="true"
                app:srcCompat="@drawable/ic_launcher_background"
                android:layout_width="@dimen/_24dp"
                android:layout_height="@dimen/_24dp"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_toStartOf="@+id/imvEventItem"
                android:layout_toEndOf="@+id/imvEventBullet"
                android:layout_marginStart="@dimen/_16dp"
                android:textAllCaps="true"
                android:id="@+id/tvEventType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="Monsters and Aliens"
                android:textColor="@color/lochmara"
                android:textSize="@dimen/_16sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_toStartOf="@+id/imvEventItem"
                android:layout_toEndOf="@+id/imvEventBullet"
                android:layout_marginStart="@dimen/_16dp"
                android:id="@+id/tvEventDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvEventType"
                android:text="Horror"
                android:layout_marginTop="@dimen/_10dp"
                android:layout_marginBottom="@dimen/_10dp"
                android:textColor="@color/black" />
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/llItemAction"
                android:gravity="center"
                android:background="@drawable/bg_btn_rounded"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_40dp"
                android:layout_below="@id/tvEventDesc"
                android:layout_toEndOf="@+id/imvEventBullet"
                android:layout_marginStart="@dimen/_16dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_marginStart="@dimen/_10dp"
                    android:layout_marginEnd="@dimen/_5dp"
                    android:id="@+id/tvAction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_btn_add"
                    android:textAllCaps="false"
                    android:textSize="@dimen/_16sp"
                    android:textColor="@color/white" />
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_marginEnd="@dimen/_10dp"
                    android:id="@+id/imvAction"
                    app:srcCompat="@drawable/ic_download_48"
                    android:layout_width="@dimen/_24dp"
                    android:layout_height="@dimen/_24dp"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imvEventItem"
                android:layout_alignParentEnd="true"
                android:layout_width="@dimen/_75dp"
                android:layout_height="@dimen/_75dp"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>